{
  "name": "convert-string-time",
  "version": "7.0.1",
  "description": "Simple utility to convert between 12/24 hours string formats",
  "keywords": [
    "12 hours",
    "24 hours",
    "convert",
    "format",
    "time"
  ],
  "homepage": "https://github.com/ahmedelgabri/convert-string-time#readme",
  "bugs": {
    "url": "https://github.com/ahmedelgabri/convert-string-time/issues"
  },
  "license": "MIT",
  "author": "Ahmed El Gabri <ahmed@gabri.me> (https://gabri.me)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmedelgabri/convert-string-time.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "prettier": {
    "printWidth": 80,
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "bracketSpacing": false,
    "endOfLine": "lf"
  },
  "scripts": {
    "build": "bun run build.ts",
    "test": "bun test",
    "typecheck": "bun run lint",
    "lint": "oxlint --type-aware --type-check .",
    "format:check": "prettier --ignore-unknown --check .",
    "format": "prettier --ignore-unknown --write .",
    "prepare": "bun run build && husky install",
    "prepack": "bun run build",
    "prepublishOnly": "bun test && bun run build",
    "release": "bun run publish.ts"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "husky": "^6.0.0",
    "npm": "^11.7.0",
    "oxlint": "^1.35.0",
    "oxlint-tsgolint": "^0.10.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  }
}
